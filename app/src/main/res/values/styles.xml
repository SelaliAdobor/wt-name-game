<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CorrectAnswerShowcaseTheme" parent="ShowcaseView.Light">
        <item name="sv_backgroundColor">#DD00801A</item>
        <item name="sv_showcaseColor">#00A621</item>
        <item name="sv_buttonText">Ok</item>
        <item name="sv_tintButtonColor">false</item>
    </style>

    <style name="WrongAnswerShowcaseTheme" parent="ShowcaseView">
        <item name="sv_backgroundColor">#DD941A00</item>
        <item name="sv_showcaseColor">#B51A00</item>
        <item name="sv_buttonText">Ok</item>
        <item name="sv_tintButtonColor">false</item>
    </style>
</resources>
